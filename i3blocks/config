[memory]
command=~/.config/i3blocks/memory_htop.sh
interval=5 

[disk]
command=df -k /home | awk '/\// {printf "%.1f GB\n", $4/1024/1024}'
interval=250

[cpu]
command=~/.config/i3blocks/decimal_cpu.sh
interval=2

#
[time]
command=date '+%d-%m %H:%M'
interval=1

[time-ist]
command= TZ='Asia/Kolkata' date '+%d-%m %H:%M'
interval=1

